{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Pester Tests",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "Import-Module Pester -ErrorAction SilentlyContinue; Invoke-Pester -Script '${workspaceFolder}\\PowerShell\\Tests\\Monitor.Tests.ps1' -Output Detailed"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
